<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="148.9dp"
        android:layout_height="30.3dp"
        android:layout_marginTop="88dp"
        android:scaleType="fitXY"
        android:src="@drawable/fill_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></ImageView>

    <EditText
        android:id="@+id/username"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginLeft="62.5dp"
        android:layout_marginTop="77.7dp"
        android:layout_marginRight="62.5dp"
        android:layout_weight="1"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <EditText
        android:id="@+id/password"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginLeft="62.5dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="22.5dp"
        android:layout_marginRight="62.5dp"
        android:layout_weight="1"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        android:scaleType="fitXY"
        android:text=""
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <LinearLayout
        android:id="@+id/rememberMeGroup"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62.5dp"
        android:layout_marginRight="62.5dp"
        android:layout_marginBottom="29.5dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password">

        <CheckBox
            android:id="@+id/rememberMe"
            android:checked="true"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remember Me" />

        <Button
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#222222"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:layout_marginLeft="37.5dp"
            android:text="Forgot password?"></Button>
    </LinearLayout>

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="250dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/rememberMeGroup"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="62.5dp"
        android:layout_marginRight="62.5dp"
        android:background="@drawable/btn_border_radius"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:text="Login"></Button>

    <TextView
        android:id="@+id/connectWith"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/loginBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="62.5dp"
        android:layout_marginRight="62.5dp"
        android:layout_marginTop="26.5dp"
        android:textColor="#b2b2b2"
        android:textSize="12sp"
        android:textAlignment="center"
        android:text="or connect with" />

    <LinearLayout
        android:id="@+id/social"
        app:layout_constraintTop_toBottomOf="@+id/connectWith"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="62.5dp"
        android:layout_marginRight="62.5dp"
        android:layout_marginTop="29.5dp"
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/fb"></ImageView>

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:scaleType="fitXY"
            android:src="@drawable/tw"></ImageView>
    </LinearLayout>

    <Button
        app:layout_constraintTop_toBottomOf="@+id/social"
        android:layout_width="250dp"
        android:layout_height="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="62.5dp"
        android:layout_marginRight="62.5dp"
        android:layout_marginTop="85.5dp"
        android:layout_marginBottom="44.5dp"
        android:textAllCaps="false"
        android:textColor="#1f4ba5"
        android:textSize="12sp"
        android:background="@drawable/btn_border_radius2"
        android:scaleType="fitXY"
        android:text="Sign Up with Email"></Button>
</androidx.constraintlayout.widget.ConstraintLayout>